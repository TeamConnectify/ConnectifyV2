    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Security Questions"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner5"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="48dp"
            android:layout_alignEnd="@+id/textView3"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText10"
            android:layout_below="@+id/spinner5"
            android:layout_alignEnd="@+id/spinner5"
            android:layout_alignStart="@+id/spinner5" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner6"
            android:layout_alignStart="@+id/editText10"
            android:layout_alignEnd="@+id/editText10"
            android:layout_below="@+id/editText10"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText11"
            android:layout_below="@+id/spinner6"
            android:layout_alignEnd="@+id/spinner6"
            android:layout_alignStart="@+id/spinner6" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner7"
            android:layout_below="@+id/editText11"
            android:layout_alignStart="@+id/editText11"
            android:layout_alignEnd="@+id/editText11"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText12"
            android:layout_below="@+id/spinner7"
            android:layout_alignEnd="@+id/spinner7"
            android:layout_alignStart="@+id/spinner7" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/button3"
            android:background="#f5793f"/>
    </LinearLayout>
    <!--android:layout_alignTop="@+id/button2"
        android:gravity="bottom"
        android:layout_toEndOf="@+id/editText12" />-->

</RelativeLayout>
